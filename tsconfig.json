{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "lib": [
      "ES2020.Promise",
      "esnext",
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "src/*": ["./src/*"],
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "target": "es2017"
  },
  "exclude": [
    "node_modules", 
    "dist", 
    "src/schematics/**/*",
    "src/**__test__/**/*", 
    "test/**__test__/**/*",
    "src/schematics"
  ],
  "include": [
    "src", 
    "test"
  ],
}
